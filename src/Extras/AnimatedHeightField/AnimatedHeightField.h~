/*************************************************************************************/
/*************************************************************************************/
#ifndef ANIMATED_HEIGHT_FIELD_H
#define	ANIMATED_HEIGHT_FIELD_H
/*************************************************************************************/
/*************************************************************************************/
#include <HeightField.h>
using namespace Utils;
/*************************************************************************************/
/*************************************************************************************/
class AnimatedHeightField
{
	public:
/*************************************************************************************/
    		AnimatedHeightField();
    		AnimatedHeightField(double step);
    		AnimatedHeightField(double step, Vector3 Min, Vector3 Max, double d_x, double d_z);
   		 AnimatedHeightField(const AnimatedHeightField& orig);
    		virtual ~AnimatedHeightField();
/*************************************************************************************/    
    		double getT() const;
    		double getStep() const;
/*************************************************************************************/
		void   setT(double);
    		void   setStep(double);
/*************************************************************************************/
    		virtual void update() = 0;
/*************************************************************************************/
    		virtual void display(Vector3) = 0;
    		virtual void displayNormales(Vector3 color) = 0;
/*************************************************************************************/    
	protected:
/*************************************************************************************/
    		double t;	// temps courant
    		double step; // pas de temps
};
/*************************************************************************************/
#endif	/* ANIMATEDHEIGHTFIELD_H */
/*************************************************************************************/
/*************************************************************************************/
