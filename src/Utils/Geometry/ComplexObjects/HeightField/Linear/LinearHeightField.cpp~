#include <LinearHeightField.h>
#include <LinearHeightField.cuh>
/*****************************************************************************************************/
/*****************************************************************************************************/
namespace Utils 
{
/*****************************************************************************************************/
/*****************************************************************************************************/
Linear_HeightField::Linear_HeightField():HeightField()
{
	a = b = 0;
}
/*****************************************************************************************************/
Linear_HeightField::Linear_HeightField(double a, double b, Vector3 Min, Vector3 Max, double d_x, double d_z)
		   :HeightField(Min,Max,d_x,d_z)
{
	this->a = a;
	this->b = b;
}
/*****************************************************************************************************/	
Linear_HeightField::Linear_HeightField(const Linear_HeightField& H):HeightField(H)
{
	this->a = H.a;
	this->b = H.b;
}
/*****************************************************************************************************/
Linear_HeightField::~Linear_HeightField()
{
}
/*****************************************************************************************************/
/*****************************************************************************************************/
double Linear_HeightField::getA()
{
	return a;
}
/*****************************************************************************************************/
double Linear_HeightField::getB()
{
	return b;
}
/*****************************************************************************************************/
/*****************************************************************************************************/
void Linear_HeightField::create(double a, double b)
{
	this->a = a;
	this->b = b;
}
/*****************************************************************************************************/
/*****************************************************************************************************/
void Linear_HeightField::calculateHeight(double* m_pos, uint nbPos)
{
	LinearHeightField_calculateHeight_CUDA(m_pos,a,b,nbPos);
}
/*****************************************************************************************************/
/*****************************************************************************************************/
}
/*****************************************************************************************************/
/*****************************************************************************************************/
