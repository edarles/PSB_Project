#ifndef _LINEAR_HEIGHT_FIELD__
#define _LINEAR_HEIGHT_FIELD__

#include <HeightField.h>
using namespace std;

namespace Utils {

/*****************************************************************************************************/
/*****************************************************************************************************/
class Linear_HeightField : public HeightField
{
/*****************************************************************************************************/
	public:
		Linear_HeightField();
		Linear_HeightField(double a, double b,
				   Vector3 Min, Vector3 Max, double d_x, double d_z);
		Linear_HeightField(const Linear_HeightField& H);
/*****************************************************************************************************/
		~Linear_HeightField();
/*****************************************************************************************************/
/*****************************************************************************************************/
		double  getA();
		double  getB();
/*****************************************************************************************************/
/*****************************************************************************************************/
		void    create(double a, double b);
/*****************************************************************************************************/
/*****************************************************************************************************/
		void    calculateHeight(double* m_pos, uint nbPos);
		 void   calculateHeight_Normales(double* m_pos, double* nx0, double* nx1, double* nz0, double* nz1, uint nbPos);
/*****************************************************************************************************/
/*****************************************************************************************************/
	protected:
		double a, b;
};
/*****************************************************************************************************/
/*****************************************************************************************************/
}
/*****************************************************************************************************/
/*****************************************************************************************************/
#endif
