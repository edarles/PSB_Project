#include <GaussianHeightField.h>
#include <GaussianHeightField.cuh>
/*****************************************************************************************************/
/*****************************************************************************************************/
namespace Utils
{
/*****************************************************************************************************/
/*****************************************************************************************************/
Gaussian_HeightField::Gaussian_HeightField():HeightField()
{
	A = p1 = p2 = 0;
}
/*****************************************************************************************************/
Gaussian_HeightField::Gaussian_HeightField(double a, double p_1, double p_2,
		                           Vector3 Min, Vector3 Max, double d_x, double d_z)
		     :HeightField(Min,Max,d_x,d_z),A(a),p1(p_1),p2(p_2)
{
}
/*****************************************************************************************************/
Gaussian_HeightField::Gaussian_HeightField(const Gaussian_HeightField& H):HeightField(H)
{
	this->A = H.A;
	this->p1 = H.p1;
	this->p2 = H.p2;
}
/*****************************************************************************************************/
Gaussian_HeightField::~Gaussian_HeightField()
{
}
/*****************************************************************************************************/
/*****************************************************************************************************/
void Gaussian_HeightField::create(double A, double p1, double p2)
{
	this->A = A;
	this->p1 = p1;
	this->p2 = p2;
}
/*****************************************************************************************************/
/*****************************************************************************************************/
void Gaussian_HeightField::calculateHeight(double* m_pos, uint nbPos)
{
	GaussianHeightField_calculateHeight_CUDA(m_pos,A,center.x(),center.z(),p1,p2,nbPos);
}
/*****************************************************************************************************/
/*****************************************************************************************************/
}
/*****************************************************************************************************/
/*****************************************************************************************************/
