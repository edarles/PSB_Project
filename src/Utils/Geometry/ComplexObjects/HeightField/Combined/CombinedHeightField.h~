#ifndef _COMBINED_HEIGHT_FIELD__
#define _COMBINED_HEIGHT_FIELD__

#include <vector>

#include <HeightField.h>
using namespace std;

namespace Utils {

/*****************************************************************************************************/
/*****************************************************************************************************/
class Combined_HeightField : public HeightField
{
/*****************************************************************************************************/
	public:
		Combined_HeightField();
		Combined_HeightField(Vector3 Min, Vector3 Max, double d_x, double d_z);
		Combined_HeightField(const Combined_HeightField& H);
/*****************************************************************************************************/
		~Combined_HeightField();
/*****************************************************************************************************/
/*****************************************************************************************************/
		void    addHeightField(HeightField* H);
		void    setHeightField(HeightField* H, uint index);
		void    removeHeightFields(uint index);
		void    clearAll();
/*****************************************************************************************************/
/*****************************************************************************************************/
		void    create(vector<HeightField*> Hfields);
/*****************************************************************************************************/
/*****************************************************************************************************/
		void    calculateHeight(double* m_pos, uint nbPos);
/*****************************************************************************************************/
/*****************************************************************************************************/
	protected:
		vector<HeightField*> HFields;
};
/*****************************************************************************************************/
/*****************************************************************************************************/
}
/*****************************************************************************************************/
/*****************************************************************************************************/
#endif
