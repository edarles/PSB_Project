#ifndef _OBJECT_GEO_
#define _OBJECT_GEO_

#include <Vector3.h>

namespace Utils {

/*****************************************************************************************************/
/*****************************************************************************************************/
class ObjectGeo 
{
/*****************************************************************************************************/
	public:
		ObjectGeo();
		ObjectGeo(const ObjectGeo&);
		~ObjectGeo();

/*****************************************************************************************************/
/*****************************************************************************************************/
		Vector3 getMin();
		Vector3 getMax();

		void    setMin(Vector3);
		void    setMax(Vector3);
/*****************************************************************************************************/
/*****************************************************************************************************/
		virtual void 	display(Vector3 color) = 0;
		virtual void 	displayNormale(Vector3 color) = 0;

/*****************************************************************************************************/
/*****************************************************************************************************/
	private:
		Vector3 Min, Max;
};
/*****************************************************************************************************/
/*****************************************************************************************************/
}
#endif
