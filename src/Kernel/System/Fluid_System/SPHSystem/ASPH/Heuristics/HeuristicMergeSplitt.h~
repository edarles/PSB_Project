#ifndef _HEURISTIC_MERGE_SPLITT_
#define _HEURISTIC_MERGE_SPLITT_

/**************************************************************************************/
/**************************************************************************************/
class HeuristicMergeSplitt 
{
	public:
	/**************************************************************************************/
		HeuristicMergeSplitt(unsigned int nbBodies);
		HeuristicMergeSplitt(const HeuristicMergeSplitt&);
		~HeristicMergeSplitt();
	/**************************************************************************************/
	/**************************************************************************************/
		bool* getResult();
	/**************************************************************************************/
	/**************************************************************************************/
		void  changeNbBodies(unsigned int);
	/**************************************************************************************/
	/**************************************************************************************/
		virtual void evaluationFunction(float* pos, float* vel, float *forces) = 0;
	/**************************************************************************************/
	/**************************************************************************************/
	protected:
		void init();
		unsigned int nbBodies;
		// Storage result of heuristic evaluation on GPU
		bool* m_dRes;
		// Storage result of heuristic evaluation ON CPU (don't miss to do GPU->CPU transfert)
		bool* m_hRes;
};
/**************************************************************************************/
/**************************************************************************************/
#endif
