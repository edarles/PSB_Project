#ifndef _FORCE_EXT_CONSTANTE_
#define _FORCE_EXT_CONSTANTE_

#include <ForceExt.h>

/*****************************************************************************************************/
/*****************************************************************************************************/
class ForceExt_Constante : public ForceExt {

	public:

/*****************************************************************************************************/
/*****************************************************************************************************/
		ForceExt_Constante();
		ForceExt_Constante(Vector3 direction, float amplitude);
		ForceExt_Constante(const ForceExt_Constante& F);
		~ForceExt_Gravity();

		void draw();
/*****************************************************************************************************/
/*****************************************************************************************************/
		Vector3 getDirection();
		float   getAmplitude();
/*****************************************************************************************************/
/*****************************************************************************************************/
		void   setDirection(Vector3);
		void   setAmplitude(float);

/*****************************************************************************************************/
/*****************************************************************************************************/
	private:

		Vector3 direction;
		float   amplitude;
};
/*****************************************************************************************************/

#endif
